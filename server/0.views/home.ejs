<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>

    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body{
            background: linear-gradient(135deg, #0f0f0fcb, #1a1a1a, #111827);
            color: #f3f4f6;
            min-height: 100vh;
            padding: 20px 10px;
        }

        h1{
            text-align: center;
            font-size: 28px;
            margin-bottom: 28px;
            color: #e5e7eb;
        }

        /* Main container */
        .container{
            width: 100%;
            max-width: 950px;
            margin: auto;
            background: #1f2937;
            padding: 25px;
            border-radius: 14px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.6);
            border: 1px solid rgba(255,255,255,0.05);
        }

        label{
            font-size: 15px;
            font-weight: 600;
        }

        input[type="url"],
        input[type="text"]{
            width: 100%;
            padding: 12px;
            margin-top: 8px;
            margin-bottom: 18px;
            border-radius: 8px;
            border: 1px solid #374151;
            background: #2b2b3d;
            font-size: 15px;
            color: #fff;
        }

        input[type="url"]:focus,
        input[type="text"]:focus{
            border-color: #6366f1;
            outline: none;
            box-shadow: 0 0 0 3px rgba(99,102,241,0.35);
        }

        button, input[type="button"]{
            background: #4f46e5;
            border: none;
            padding: 12px 18px;
            font-size: 15px;
            color: white;
            font-weight: 600;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.25s ease;
            width: 100%;
        }

        button:hover, input[type="button"]:hover{
            background: #4338ca;
        }

        /* Short URL Box */
        .short-url-box{
            margin-top: 25px;
            background: #111827;
            padding: 20px;
            border-radius: 14px;
            border: 1px solid rgba(255,255,255,0.05);
        }

        /* Table responsive wrapper */
        .table-wrapper {
            width: 100%;
            overflow-x: auto;
            margin-top: 25px;
        }

        table{
            width: 100%;
            min-width: 650px;
            border-collapse: collapse;
            background: #1f1f2e;
            border-radius: 10px;
            overflow: hidden;
        }

        table th{
            background: #2d2d40;
            color: #e5e7eb;
            padding: 12px;
            font-size: 15px;
            white-space: nowrap;
        }

        table td{
            padding: 12px;
            color: #d1d5db;
            border-bottom: 1px solid #333344;
        }

        table tr:hover{
            background: #2a2a3b;
        }

        table a{
            color: #818cf8;
            text-decoration: none;
            transition: 0.2s;
        }

        table a:hover{
            text-decoration: underline;
        }

        /* Mobile & Tablet Responsive Adjustments */
        @media (max-width: 768px) {
            h1{
                font-size: 24px;
            }

            .container{
                padding: 20px;
            }

            table th, table td{
                font-size: 13px;
                padding: 10px;
            }
        }

        @media (max-width: 480px) {
            h1{
                font-size: 22px;
            }

            button, input[type="button"]{
                font-size: 14px;
            }

            input[type="url"], input[type="text"]{
                font-size: 14px;
            }
        }

    </style>
</head>

<body>

    <div class="container">
        <h1>URL Shortener</h1>

        <form method="POST" action="/url">
            <label for="url">Enter Your Long URL:</label>
            <input type="url" name="url" id="url" placeholder="https://example.com/long-url" required>

            <button type="submit">Generate Short URL</button>
        </form>

        <% if(locals.shortenerId) { %>
        <div class="short-url-box">
            <label>Shortened URL:</label>
            <input 
                type="text" 
                value="<%= baseUrl %>/url/<%= shortenerId %>" 
                id="shortURL" 
                readonly
            >

            <input 
                type="button" 
                value="COPY URL" 
                onclick="navigator.clipboard.writeText(document.getElementById('shortURL').value); this.value='COPIED';"
            >
        </div>
        <% } %>

        <% if (locals.allDocs) { %>
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th colspan="5">Record of All URLs</th>
                    </tr>
                    <tr>
                        <th>S.No</th>
                        <th>Long URL</th>
                        <th>Short ID</th>
                        <th>Shortened URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>

                <tbody>
                    <% allDocs.forEach((item, index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= item.redirectURL %></td>
                            <td><%= item.shortenerId %></td>

                            <td>
                                <a 
                                    href="<%= baseUrl %>/url/<%= item.shortenerId %>" 
                                    target="_blank">

                                    <%= baseUrl %>/url/<%= item.shortenerId %>
                                </a>
                            </td>

                            <td><%= item.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <% } %>

    </div>

</body>
</html>
